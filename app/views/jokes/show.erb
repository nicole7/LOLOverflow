<div class="joke-show-all-content">
  <% if @errors %>
  	<% @errors.each do |error| %>
  		<%= error %>
  	<% end %>
  <% end %>

  <section class="joke-stuff">
    <div class="joke-container-show">
      <ul class="joke-ul">

            <div class="stats-show">

              <div class="votes-show joke-heading">
              	<a href="/jokes/<%= @joke.id %>/votes?route=new" ><center><i class="fa fa-arrow-circle-up fa-2x" aria-hidden="true"></i></center></a>
    						<br/>
                <div><span title="votes"><center><%= @joke.vote_tally %></center></span></div>
    						<br/>
    						<a href="/jokes/<%= @joke.id %>/votes?route=delete" ><center><i class="fa fa-arrow-circle-down fa-2x" aria-hidden="true"></i></center></a>
              </div>

              <div class="answers-show">
                <div><span title="answers"><center><%= @joke.answers.count %></center></span> answers</div>
              </div>

              <div class="views-show">
                <div><span title="views"><center><%= @joke.view_count %></center></span> views</div>
              </div>

            </div>

              <div class="summary-show joke-heading">
                <span><h3><%= @joke.joke %></h3></span>
                <br>
              <div class="joke-heading-punchline">
                <%= @joke.punchline %>
              </div>

      </ul>
    </div>


    <div class="joke-comment">
        <div id="click-to-comment-post">
          <form>
            <a href="#">Add a Comment</a>
            <input id="button">
          </form>
        </div>

        <div id="comment-on-post">
          <label>comment:</label>
          <form action="/jokes/<%= @joke.id %>/comments" method="POST">
            <textarea name="description_text"> </textarea>
            <input type="submit" value="submit" >
          </form>
        </div>
        <div class="joke-comments" >
          <% if @joke.comments.length > 0 %>
            <ul>
            <% @joke.comments.each do |comment| %>
              <li><%= comment.description_text %></li>
            <% end %>
            </ul>
          <% end %>
        </div>
      </section>
    </div>

    <div class="answer-container-show">
      <section class="answer-stuff">
      	<h4>Answers:</h4>
      	<div class="add-answer" >
      		<label><strong>Write an answer (reveal the punchline!):</strong></label>
      		<form action="/jokes/<%= @joke.id %>/answers" method="POST" class="answer-form">
      			<textarea name="description_text"></textarea>
      			<input type="submit" value="submit" >
      		</form>
      	</div>
      	<ul>
      		<% @joke.answers.each do |answer| %>

      		<% if @joke.best_answer_id == answer.id %>
            		<br><br><i aria-hidden="true" value=&#128514></i> <span id="bestanswer">Best Punchline!</span>
          	<% end %>
      			<li>



            <div class="answer-summary">
              <div class="votes-show joke-heading answer-votes-heading">
                <a href="/answers/<%= answer.id %>/votes?route=new" ><center><i class="fa fa-arrow-circle-up fa-2x" aria-hidden="true"></i></center></a>
                <br/>
                <div><span title="votes"><center><%= answer.vote_tally %></center></span></div>
                <br/>
                <a href="/answers/<%= answer.id %>/votes?route=delete" ><center><i class="fa fa-arrow-circle-down fa-2x" aria-hidden="true"></i></center></a>
              </div>

      				<div class="answer-heading">
      				  <%= answer.description_text %>
      				</div>
      			</div>

        <% if poster? %>
            <form action="/answers/<%= answer.id %>" method="post">
              <input type="hidden" name="_method" value="put">
              <input type="submit" value="Best Punchline?">
            </form>
        <% end %>
              <div id="click-to-comment-answer">
                <form>
                  <a href="#">Add a Comment</a>
                  <input id="button">
                </form>
              </div>
              <div class="comment-on-answer">
                <label>comment:</label>
                <form action="/answers/<%= answer.id %>/comments" method="POST">
                  <textarea name="description_text"></textarea>
                  <input type="submit" value="submit" >
                </form>
              </div>
              <div class="answer-comments" >
                <% if answer.comments.length > 0 %>
                  <ul>
                  <% answer.comments.each do |comment| %>
                    <li><%= comment.description_text %></li>
                  <% end %>
                  </ul>
                <% end %>
              </div>
      			</li>
      		<% end %>
      	</ul>
    </section>
  </div>
</div>
