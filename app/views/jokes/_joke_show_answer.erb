<% if joke.best_answer_id == answer.id %>
  <br><br><i aria-hidden="true" value="&#128514"></i> <span id="bestanswer">&#x1f602;</span>
<% end %>

<li>
  <div class="answer-summary">
    <div class="votes-show joke-heading answer-votes-heading">
      <div>
        <a href="/answers/<%= answer.id %>/votes?route=new" ><i class="fa fa-arrow-circle-up fa-2x" aria-hidden="true"></i></a>
        <br/>
      </div>
      <div title="votes" class="display-vote-tally"><%= answer.vote_tally %>
      </div>
      <div>
      <br/>
        <a href="/answers/<%= answer.id %>/votes?route=delete" ><i class="fa fa-arrow-circle-down fa-2x" aria-hidden="true"></i></a>
      </div>
    </div>

    <div class="answer-heading">
      <%= answer.description_text %>
    </div>
  </div>

  <% if poster? %>
    <form action="/answers/<%= answer.id %>" method="post">
      <input type="hidden" name="_method" value="put">
      <input type="submit" value="Best Punchline">
    </form>
  <% end %>

  <div class="click-to-comment-answer">
      <a href="#" class="add-comment-link">Add a Comment</a>
  </div>

  <div class="comment-on-answer">
    <label>Comment:</label>
    <form action="/answers/<%= answer.id %>/comments" method="POST">
      <textarea name="description_text"></textarea>
      <input class="submit-button" type="submit" value="submit" >
    </form>
  </div>

  <div class="answer-comments" >
    <% if answer.comments.length > 0 %>
      <ul>
      <% answer.comments.each do |comment| %>
        <li><%= comment.description_text %></li>
      </ul>
      <% end %>
    <% end %>
  </div>
</li>
